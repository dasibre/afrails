%section#content
  .top_box
    .inner
      .container_12
        .wrapper
          %article.grid_4
            .pad_box
              %h2.ind Contact Info
              %dl.adress
                %dt
                  %strong
                    Bayside Queens,
                    %br
                      New York, N.Y.
                %dd
                  %span> Telephone:
                  +1 718 618 4036
                %dd
                  %span> FAX:
                  +1 800 889 9898
                %dd
                  E-mail:
                  %a{:href => "mailto:info@afrails.com"} Afrails Inquiry
          %article.grid_8.last-col
            .pad_box
              %h2.ind Get in Touch
              = form_for(@contact, :validate => true, :html => { :id => "contact-form" }) do |f|
                .success
                  Contact form submitted!
                  %br
                    %strong We will be in touch soon.
                %fieldset
                  %label.name
                    = f.text_field :name, :class => "contact_name", :value => "Name"
                    -#%input{:type => "text", :value => "Name:"}
                      %span.error *This is not a valid name.
                      %span.empty *This field is required.
                  %label.email
                    = f.text_field :email, :value => "E-mail"
                    -#%input{:type => "text", :value => "E-mail:"}
                      %span.error *This is not a valid email address.
                      %span.empty *This field is required.
                  %label.phone
                    = f.text_field :phone, :value => "Phone"
                      
                  %label.message
                    = f.text_area :message, :value => "Message"
                    
                  .buttons2
                    %a.link2{"data-type" => "reset", :href => "#"} Clear
                    %a.link2{"data-type" => "submit", :href => "#"} Submit